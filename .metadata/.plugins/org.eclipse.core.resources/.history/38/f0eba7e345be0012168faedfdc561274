import android.database.sqlite.SQLiteDatabase.CursorFactory;
import android.database.sqlite.SQLiteOpenHelper;

public class DatabaseAdapter extends SQLiteOpenHelper {

	private static final String DATABASE_NAME = "employee.db";
	private static final int DATABASE_VERSION = 1;
	
	private static final String TABLE_EMPLOYEE = "employees";
	private static final String COLUMN_ID = "employeeId";
	private static final String FIRST_NAME = "firstName";
	private static final String LAST_NAME = "lastName";
	private static final String GENDER = "gender";
	private static final String CITY = "city";
	private static final String STATE = "state";
	
	private static final String TABLE_CREATE = "CREATE TABLE " + TABLE_EMPLOYEE + " (" +
								COLUMN_ID + " INTEGER PRIMARY KEY AUTOINCREMENT, " +
								FIRST_NAME + " TEXT, " +
								LAST_NAME + " TEXT, " +
								GENDER + " TEXT, " +
								CITY + " TEXT, " +
								STATE + " TEXT)";
	
	public DatabaseAdapter(Context context, String name, CursorFactory factory,
			int version) {
		super(context, name, factory, version);
		// TODO Auto-generated constructor stub
	}

	public DatabaseAdapter(Context context, String name, CursorFactory factory,
			int version, DatabaseErrorHandler errorHandler) {
		super(context, name, factory, version, errorHandler);
		// TODO Auto-generated constructor stub
	}

	@Override
	public void onCreate(SQLiteDatabase db) {
		// TODO Auto-generated method stub

	}

	@Override
	public void onUpgrade(SQLiteDatabase db, int oldVersion, int newVersion) {
		// TODO Auto-generated method stub

	}

}
