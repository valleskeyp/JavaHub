<meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
<title>Quick-Calendar</title>
<link rel="stylesheet" href="styles.css"  />
</head>

<body>
<div>
  <h1>Quick-Calendar</h1>
</div>
<div>
<form id="form">
  <h2>Required Information</h2>
  <div>
    <label for="title">Event Title: </label>
    <input class="txtground" type="text" id="title"/>
  </div>
  <div>
    <label for="dateMonth">Event Date: </label>
    <input class="txtground" type="number" maxlength="2" id="dateMonth" placeholder="MM"/>
    <input class="txtground" type="number" maxlength="2" id="dateDay" placeholder="DD"/>
  </div>
  <h2>Optional Information</h2>
  <div>
    <textarea id="location" class="txtground" placeholder="Add a location"></textarea>
  </div>
  <div>
    <textarea id="description" class="txtground" placeholder="Describe the event"></textarea>
  </div>
  <input type="button" class="submit" name="submit" id="submit" value="Submit" onClick="onSubmit()" />
</form>
</body>
<script type="text/javascript">
    function onSubmit() {
        var title = document.getElementById("title").value;
        var month = document.getElementById("dateMonth").value;
        var day = document.getElementById("dateDay").value;
        var loc = document.getElementById("location").value;
        var desc = document.getElementById("description").value;
        Android.getData(title, month, day, loc, desc); 
    }
    function clear() {
    	document.getElementById("title").value = "";
        document.getElementById("dateMonth").value = "";
        document.getElementById("dateDay").value = "";
        document.getElementById("location").value = "";
        document.getElementById("description").value = "";
    }
</script>
