    //makes sure that whenever the _recent list gets updated, the spinner updates as well
    private void getAndUpdate() {
    	if (!_recentTitle.isEmpty()) {
    		_recentTitle.clear();
		}
    	_recentTitle.add("View recent movies.");
    	_recent = getRecents();
    	updateRecents();
    }
